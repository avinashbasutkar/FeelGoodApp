<LoginScreen>:

    GridLayout:
        cols: 1

        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
            RelativeLayout:
                TextInput:
                    id: username
                    hint_text: "Username"
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            RelativeLayout:
                TextInput:
                    id: password
                    password: True
                    hint_text: "Password"
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            RelativeLayout:    
                Button:
                    text: "Login"
                    on_press: root.home_page(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    opacity: 1 if self.state == 'normal' else 0.5
            Label:
                id: incorrect_credentials
                text: ""

        GridLayout:
            cols: 3
            size_hint: 0.2, 0.2
            padding: 15, 10
            spacing: 15, 10
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                on_press: root.forgot_password()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "About"
                background_color: 1, 1, 1, 0
                on_press: root.about()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                on_press: root.sign_up()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:

    GridLayout:
        cols: 1
        Label:
            text: "Create your Account"
            font_size: '20sp'
        RelativeLayout:    
            TextInput:
                id: username
                hint_text: "Username"
                size_hint: 0.4, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        RelativeLayout:
            TextInput:
                id: password
                hint_text: "Password"
                size_hint: 0.4, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        RelativeLayout:
            Button:
                text: "Create Account"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.4, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Button:
            text: "Back to Login Page"
            background_color: 1, 1, 1, 0
            on_press: root.login()
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1

<SignUpSuccessFulScreen>:

    GridLayout:
        cols: 1
        Label:
            text: "Your account is created successfully!"
        Button:
            text: "Login to your account"
            on_press: root.login()

<ForgotPasswordScreen>:

    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Label:
            text: "Reset your Account Password"
            font_size: '20sp'
        RelativeLayout:
            TextInput:
                hint_text: "Enter email address"
                size_hint: 0.5, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        RelativeLayout:
            Button:
                text: "Submit"
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Button:
            text: "Back to Login Page"
            background_color: 1, 1, 1, 0
            on_press: root.login()
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1

<HomePageScreen>:

    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30

        RelativeLayout:
            ImageButton:
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                background_color: 1, 1, 1, 0
                on_press: root.logout()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.83, 'center_y': 0.8}
        Label:
            id: welcome_user
            text: "How are you feeling today?"
        RelativeLayout:
            TextInput:
                id: Feeling
                hint_text: "happy, sad or unloved?"
                size_hint: 0.6, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        RelativeLayout:
            Button:
                text: "Enlighten me!"
                on_press: root.getquote(root.ids.Feeling.text)
                size_hint: 0.4, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<AboutScreen>:

    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30

        Label:
            text: "Contact Avinash Basutkar (avinashbasutkar1@gmail.com) for any comments or feedback."
            text_size: self.width, None
        Button:
            text: "Back to Login Page"
            background_color: 1, 1, 1, 0
            on_press: root.login()
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    ForgotPasswordScreen:
        name: "forgot_password_screen"
    SignUpSuccessFulScreen:
        name: "sign_up_successful_screen"
    HomePageScreen:
        name: "home_page_screen"
    AboutScreen:
        name: "about_screen"